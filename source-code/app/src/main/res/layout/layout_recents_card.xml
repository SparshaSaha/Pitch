<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="25dp">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@color/colorWhite">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/project_title"
            android:textSize="40sp"
            android:textColor="@color/dark_belize"
            android:layout_marginRight="50dp"
            android:text="Pitch"/>
        <SurfaceView
            android:background="@color/dark_belize"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_below="@id/project_title"
            android:layout_marginRight="50dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/project_template"
            android:layout_below="@id/project_title"
            android:layout_alignParentLeft="true"
            android:textColor="@color/belize"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/project_created"
            android:layout_below="@id/project_title"
            android:layout_alignParentRight="true"
            android:textColor="@color/belize"/>
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_delete"
            android:background="@android:color/transparent"
            android:id="@+id/delete_project"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>